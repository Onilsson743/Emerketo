@model SigninViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <form method="post" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <span>
            <label asp-for="Email"></label>
            <a asp-controller="SignIn" asp-action="Registration">Don't have an Account yet?</a>
        </span>        
        <input asp-for="Email" type="email">
        <small class="text-danger"><span asp-validation-for="Email"></span></small>

        <label asp-for="Password"></label>
        <input asp-for="Password" type="password">
        <small class="text-danger"><span asp-validation-for="Password"></span></small>

        <span>
            <input asp-for="KeepMeSignedIn" type="checkbox" />
            <label asp-for="KeepMeSignedIn"></label>
        </span>

        <button class="btn-theme">Submit</button>

    </form>
</div>
