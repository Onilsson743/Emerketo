@{
    var products = new DataServices();
}

<div class="container all-products">

    <div class="products">
        @{
            foreach (var product in products.ProductList)
            {
                <partial name="/Views/PartialViews/Components/ProductCards/_ProductCardSmall.cshtml" model="product" />
            }
        }
    </div>


    <button class="btn-theme fixed-btn">
        <a asp-controller="Admin" asp-action="AddProduct">Add Product</a>
    </button>    
</div>
