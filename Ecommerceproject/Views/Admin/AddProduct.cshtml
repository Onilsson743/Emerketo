
@model AddProductViewModel

<div class="AddProductForm container">
    <h5 style="color: #636363; margin-top: 100px;">Add a new product.</h5>
    <form method="post" enctype="multipart/form-data" class="form mt-4">
        <span class="split-input">
            <span>
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" type="text">
                <small class="text-danger"><span asp-validation-for="ProductName"></span></small>
            </span>
            <span>
                <label asp-for="Price"></label>
                <input asp-for="Price" type="number">
                <small class="text-danger"><span asp-validation-for="Price"></span></small>
            </span>
        </span>

        <label asp-for="ProductImage"></label>
        <input asp-for="ProductImage" >
        <small class="text-danger"><span asp-validation-for="ProductImage"></span></small>

        <label asp-for="ProductInStock" style="margin-bottom: -20px;"></label>
        <input asp-for="ProductInStock" type="number" />
        <small class="text-danger"><span asp-validation-for="ProductInStock"></span></small>

        <label asp-for="ProductDescription" style="margin-bottom: -20px;"></label>
        <textarea asp-for="ProductDescription" cols="20" rows="5"></textarea>
        <small class="text-danger"><span asp-validation-for="ProductDescription"></span></small>

        @*Displays all the categories in the database*@
        <div class="options">
            <p>Please select the categories for this product</p>
            @for (var i = 0; i < Model.ProductCategory.Count; i++)
            {
                <label asp-for="ProductCategory[i]">@Model.ProductCategory[i].Name</label>
                <input asp-for="@Model.ProductCategory[i].IsChecked" type="checkbox" />
                <input asp-for="@Model.ProductCategory[i].Name" type="hidden" />
            }
        </div>

        @*Displays all the colours in the database*@
        <div class="options">
            <p>Please select all the available colours</p>
            @for (var i = 0; i < Model.ColoursList.Count; i++)
            {
                <label asp-for="ColoursList[i]">@Model.ColoursList[i].Name</label>
                <input asp-for="@Model.ColoursList[i].IsChecked" type="checkbox" />
                <input asp-for="@Model.ColoursList[i].Name" type="hidden" />
            }
            <h6>If you want to add a new colour please scroll to the bottom of the page</h6>
            
        </div>
        
        <button type="submit" class="btn-theme">Add Product</button>
    </form>
    <partial name="/Views/PartialViews/Components/Forms/_AddColourForm.cshtml" />
</div>


